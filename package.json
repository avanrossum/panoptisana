{
  "name": "panoptisana",
  "version": "0.5.0",
  "description": "Open-source Asana task and project visibility tool for macOS",
  "main": "dist-main/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently -k \"npm run dev:renderer\" \"npm run dev:main\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json --watch --preserveWatchOutput",
    "dev:electron": "wait-on tcp:5173 dist-main/main/main.js && electron . --dev",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build": "npm run build:main && npm run build:renderer && electron-builder --config electron-builder.config.js",
    "pack": "npm run build:main && npm run build:renderer && electron-builder --dir --config electron-builder.config.js",
    "typecheck": "tsc -p tsconfig.main.json --noEmit && tsc -p tsconfig.renderer.json --noEmit",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "release": "./scripts/release.sh",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "MipYip",
  "license": "GPL-3.0",
  "dependencies": {
    "better-sqlite3": "^12.6.0",
    "electron-updater": "^6.7.3",
    "marked": "^17.0.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@electron/osx-sign": "^2.3.0",
    "@eslint/js": "^10.0.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.19.11",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.55.1-alpha.4",
    "@typescript-eslint/parser": "^8.55.1-alpha.4",
    "@vitejs/plugin-react": "^5.1.3",
    "concurrently": "^9.2.1",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "eslint": "^10.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "wait-on": "^9.0.3"
  }
}
